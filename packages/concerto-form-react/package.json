{
  "name": "concerto-form-react",
  "version": "0.3.4",
  "description": "Hyperledger Composer Form for generating a web form from a composer modeling language type",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "private": false,
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "composer-concerto": "^0.70.1",
    "concerto-form-core": "^0.3.4",
    "jsonpath": "^1.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-bootstrap": "^0.32.1",
    "react-bootstrap-tabs": "^1.0.2",
    "react-dom": "^16.4.1",
    "react-scripts": "1.1.4",
    "semantic-ui-react": "^0.83.0"
  },
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postlint": "npm run licchk",
    "licchk": "license-check-and-add",
    "postlicchk": "npm run doc",
    "doc": "jsdoc --pedantic --recurse -c jsdoc.json",
    "test": "jest",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postinstall": "npm run build",
    "build": "babel ./src -d ./lib"
  },
  "keywords": [
    "blockchain",
    "hyperledger",
    "solutions"
  ],
  "author": "Hyperledger Composer",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "ajv": "6.1.1",
    "babel-jest": "^23.6.0",
    "babelify": "7.3.0",
    "browserfs": "1.1.0",
    "coveralls": "^3.0.1",
    "debug": "^2.6.2",
    "eslint": "^3.17.1",
    "eslint-plugin-jest": "^21.27.1",
    "jest": "^23.6.0",
    "jsdoc": "3.5.5",
    "license-check-and-add": "2.3.1",
    "mockery": "2.0.0",
    "moxios": "0.4.0",
    "nunjucks": "3.0.1",
    "nyc": "^11.1.0",
    "pegjs": "0.9.0",
    "react-test-renderer": "^16.6.0",
    "rimraf": "2.5.4",
    "sinon": "2.3.8"
  },
  "license-check-and-add-config": {
    "folder": ".",
    "license": "LICENSE.txt",
    "exact_paths_method": "EXCLUDE",
    "exact_paths": [
      "coverage",
      "LICENSE.txt",
      "node_modules",
      ".nyc-output",
      "out",
      ".git",
      "yarn.lock",
      "yarn-error.log",
      "README.md",
      ".babelrc",
      "lib",
      "src/__snapshots__",
      ".DS_Store"
    ],
    "file_type_method": "EXCLUDE",
    "file_types": [
      ".yml",
      ".yaml",
      ".zip",
      ".tgz"
    ],
    "insert_license": false,
    "license_formats": {
      "js|njk|pegjs|cto|acl|qry": {
        "prepend": "/*",
        "append": " */",
        "eachLine": {
          "prepend": " * "
        }
      },
      "npmrc|editorconfig|txt": {
        "eachLine": {
          "prepend": "# "
        }
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/"
    ]
  }
}
