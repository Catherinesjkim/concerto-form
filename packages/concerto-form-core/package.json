{
  "name": "concerto-form-core",
  "version": "0.3.8",
  "description": "Hyperledger Composer Form for generating a web form from a composer modeling language type",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "private": false,
  "dependencies": {
    "composer-concerto": "^0.70.2"
  },
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check-and-add",
    "postlicchk": "npm run doc",
    "mocha": "mocha --recursive -t 10000",
    "nyc": "nyc mocha --recursive -t 10000",
    "doc": "jsdoc --pedantic --recurse -c jsdoc.json",
    "test": "nyc mocha --recursive -t 10000",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "blockchain",
    "hyperledger",
    "solutions"
  ],
  "author": "Hyperledger Composer",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "3.5.0",
    "chai-as-promised": "6.0.0",
    "chai-things": "0.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "jsdoc": "3.5.5",
    "license-check-and-add": "2.3.1",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0"
  },
  "license-check-and-add-config": {
    "folder": ".",
    "license": "LICENSE.txt",
    "exact_paths_method": "EXCLUDE",
    "exact_paths": [
      "coverage",
      "LICENSE.txt",
      "node_modules",
      ".nyc-output",
      "out",
      ".git",
      "yarn.lock",
      "yarn-error.log",
      "README.md",
      "uchi/out/model.uml"
    ],
    "file_type_method": "EXCLUDE",
    "file_types": [
      ".yml",
      ".yaml",
      ".zip",
      ".tgz"
    ],
    "insert_license": false,
    "license_formats": {
      "js|njk|pegjs|cto|acl|qry": {
        "prepend": "/*",
        "append": " */",
        "eachLine": {
          "prepend": " * "
        }
      },
      "npmrc|editorconfig|txt": {
        "eachLine": {
          "prepend": "# "
        }
      }
    }
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "lib/codegen/javascriptparser.js",
      "lib/codegen/parsejs.js",
      "lib/introspect/parser.js",
      "lib/acl/parser.js",
      "lib/query/parser.js",
      "out/**",
      "scripts/**",
      "systest/**",
      "test/**"
    ],
    "reporter": [
      "lcov",
      "json",
      "text"
    ],
    "include": [
      "lib/**.js"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 75,
    "branches": 65,
    "functions": 75,
    "lines": 75
  }
}
